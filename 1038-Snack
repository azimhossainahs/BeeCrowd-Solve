#include <stdio.h>
int main() {
  int X,Y;
  scanf("%d %d",&X, &Y);
  float C_Qprice = 4.00;
    float X_saprice = 4.50;
    float X_Bprice = 5.00;
    float T_Sprice = 2.00;
    float Re_price = 1.50;

  switch (X){
case 1:
    printf("Total: R$ %.2f\n",Y * C_Qprice);
    break;
case 2:
    printf("Total: R$ %.2f\n",Y * X_saprice);
    break;
case 3:
    printf("Total: R$ %.2f\n",Y*X_Bprice);
    break;
case 4:
    printf("Total: R$ %.2f\n",Y*T_Sprice);
    break;
case 5:
    printf("Total: R$ %.2f\n",Y*Re_price);
    break;
    }

    return 0;
}
